{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outFile": "tsc.js",
        "sourceMap": true,
        "target": "ES6",
        "typeRoots": [
            "node_modules/@root"
        ]
    },
    "include": [
        "graphs/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}